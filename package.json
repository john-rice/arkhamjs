{
  "name": "arkhamjs",
  "version": "3.4.0",
  "description": "Javascript Flux Library",
  "license": "MIT",
  "main": "index.js",
  "types": "./lib/index.d.ts",
  "typings": "lib/index",
  "keywords": [
    "arkhamjs",
    "flux",
    "immutable",
    "nitrogenlabs"
  ],
  "author": "Giraldo Rosales <giraldo@nitrogenlabs.com> (http://nitrogenlabs.com/)",
  "repository": {
    "type": "git",
    "url": "nitrogenlabs/arkhamjs.git"
  },
  "homepage": "https://arkhamjs.io",
  "bugs": {
    "url": "nitrogenlabs/arkhamjs/issues"
  },
  "scripts": {
    "compile": "NODE_ENV=production tsc && webpack",
    "deploy": "s3-deploy './lib/static/**' --cwd './lib/static/' --region us-east-1 --bucket arkhamjs.io/versions --gzip",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json './src/**/*.{ts,tsx}'",
    "prepublishOnly": "yarn test && yarn compile",
    "pretest": "yarn lint",
    "reset": "rm -rf node_modules yarn.lock && yarn",
    "test": "NODE_ENV=test jest",
    "update": "yarn upgrade-interactive --latest"
  },
  "dependencies": {
    "error-stack-parser": "^2.0.1",
    "lodash": "^4.17.5"
  },
  "devDependencies": {
    "@nlabs/arkhamjs-storage-browser": "^1.0.5",
    "@types/jest": "^22.2.2",
    "@types/lodash": "^4.14.106",
    "@types/node": "^9.6.2",
    "awesome-typescript-loader": "^5.0.0",
    "jest": "^22.4.3",
    "jest-environment-jsdom": "^22.4.3",
    "s3-deploy": "^0.10.0",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^2.8.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "rootDir": "./",
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "testEnvironment": "jsdom",
    "testRegex": "./src/.*\\.test\\.(ts|tsx|js)$",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "verbose": false
  }
}