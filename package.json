{
  "name": "arkhamjs",
  "version": "3.2.0",
  "description": "Javascript Flux Library",
  "license": "MIT",
  "main": "index.js",
  "types": "./lib/index.d.ts",
  "typings": "lib/index",
  "keywords": [
    "arkhamjs",
    "flux",
    "immutable",
    "nitrogenlabs"
  ],
  "author": "Giraldo Rosales <giraldo@nitrogenlabs.com> (http://nitrogenlabs.com/)",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/nitrogenlabs/arkhamjs.git"
  },
  "homepage": "https://arkhamjs.io",
  "bugs": {
    "url": "https://github.com/nitrogenlabs/arkhamjs/issues"
  },
  "scripts": {
    "compile": "tsc && webpack",
    "deploy": "s3-deploy './lib/static/**' --cwd './lib/static/' --region us-east-1 --bucket arkhamjs.io/versions --gzip",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json './src/**/*.{ts,tsx}'",
    "prepublishOnly": "NODE_ENV=production npm test && npm run compile",
    "pretest": "yarn lint",
    "reset": "rm -rf node_modules yarn.lock && yarn",
    "test": "jest"
  },
  "peerDependencies": {
    "lodash": "^4.0.0"
  },
  "devDependencies": {
    "@nlabs/arkhamjs-storage-browser": "^1.0.5",
    "@types/jest": "^22.1.0",
    "@types/node": "^9.3.0",
    "awesome-typescript-loader": "^3.4.1",
    "jest": "^22.1.4",
    "jest-environment-jsdom": "^22.1.4",
    "s3-deploy": "^0.9.0",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "rootDir": "./",
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "testEnvironment": "jsdom",
    "testRegex": "./src/.*\\.test\\.(ts|tsx|js)$",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "verbose": false
  }
}
