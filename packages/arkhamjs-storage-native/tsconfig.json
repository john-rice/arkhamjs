{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "jsx": "react-jsx",
    "lib": [
      "es6",
      "es7",
      "esnext",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "pretty": true,
    "skipLibCheck": true,
    "target": "ES2018"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.test.*",
    "lib",
    "./node_modules",
    "./test"
  ]
}
